<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
    <li>
      <p>Name: <%= user.name %></p>
      <span class="profile-link">
        <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        <%if current_user.status?(user)%>
        <p><%=current_user.friendship_status(user)%></p>
        <%else%>
        <%= link_to 'Add friend',  add_friend_path(user), method: :post, class: 'profile-link', data: { confirm: "You sure?" } %>
        <%end%>
      </span>
    </li>
    <% end %>
  </ul>
</section>