<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
    <li>
      Name: <%= user.name %>
      <span class="profile-link">
        <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        <%unless current_user.friends?(@user)%>
        <%= link_to 'Add friend',  add_friend_path(user), class: 'profile-link' %>
        <%else%>
        <p>Friends</p>
        <%end%>
      </span>
    </li>
    <% end %>
  </ul>
</section>